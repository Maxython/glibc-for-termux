# The original PKGBUILD was taken from the archlinux/svntogit-packages repo:
# - https://github.com/archlinux/svntogit-packages/blob/packages/binutils/trunk/PKGBUILD

pkgname=binutils-glibc
pkgver=2.40
pkgrel=2
pkgdesc='A set of programs to assemble and manipulate binary and object files'
arch=(any)
url='https://www.gnu.org/software/binutils/'
license=('GPL3' 'GPL' 'FDL1.3' 'custom:FSFAP')
#_commit=cb5f6a3e146cc70bc2d864989386df80acec5d3e
#source=(git+https://sourceware.org/git/binutils-gdb.git#commit=$_commit)
source=(https://ftp.gnu.org/gnu/binutils/binutils-$pkgver.tar.xz
        gold-warn-unsupported.patch)
sha256sums=('0f8a4c272d7f17f369ded10a4aca28b8e304828e95526da482b0ccc4dfc9d8e1'
            '2d430b66f84a19c154725ec535280c493be1d34f1a90f95208dce02fecd0e4e4')
groups=('gpkg-dev')

prepare() {
  [[ ! -d binutils-gdb ]] && ln -s binutils-$pkgver binutils-gdb
  mkdir -p binutils-build

  cd binutils-gdb

  # Turn off development mode (-Werror, gas run-time checks, date in sonames)
  sed -i '/^development=/s/true/false/' bfd/development.sh

  # Creds @Fedora
  # Change the gold configuration script to only warn about
  # unsupported targets.  This allows the binutils to be built with
  # BPF support enabled.
  patch -Np1 -i "${srcdir}"/gold-warn-unsupported.patch
}

build() {
  cd binutils-build

  "$srcdir/binutils-gdb/configure" \
    --prefix=$GLIBC_PREFIX \
    --with-lib-path=$GLIBC_PREFIX/lib:$GLIBC_PREFIX/local/lib \
    --with-bugurl=https://github.com/termux-pacman/glibc-packages/issues \
    --enable-cet \
    --enable-deterministic-archives \
    --enable-gold \
    --enable-install-libiberty \
    --enable-ld=default \
    --enable-lto \
    --enable-pgo-build=lto \
    --enable-plugins \
    --enable-relro \
    --enable-shared \
    --enable-threads \
    --disable-gdb \
    --disable-gdbserver \
    --disable-libdecnumber \
    --disable-readline \
    --disable-sim \
    --disable-werror \
    --with-debuginfod \
    --with-pic \
    --with-system-zlib

  make -O tooldir=$GLIBC_PREFIX

  # Extract the FSF All Permissive License
  # <https://www.gnu.org/prep/maintain/html_node/License-Notices-for-Other-Files.html>
  # used for some linker scripts.
  tail -n 5 "${srcdir}"/binutils-${pkgver}/ld/scripttempl/README > FSFAP
}

package() {
  cd binutils-build

  make prefix="$pkgdir/$GLIBC_PREFIX" tooldir="$pkgdir/$GLIBC_PREFIX" install

  # Remove unwanted files
  rm -f "$pkgdir"/$GLIBC_PREFIX/share/man/man1/{dlltool,nlmconv,windres,windmc}*

  # No shared linking to these files outside binutils
  rm -f "$pkgdir"/$GLIBC_PREFIX/lib/lib{bfd,opcodes}.so
  echo 'INPUT( $GLIBC_PREFIX/lib/libbfd.a -liberty -lz -ldl )' > "$pkgdir/$GLIBC_PREFIX/lib/libbfd.so"
  echo 'INPUT( $GLIBC_PREFIX/lib/libopcodes.a -lbfd )' > "$pkgdir/$GLIBC_PREFIX/lib/libopcodes.so"

  # install FSF All Permissive License
  install -Dm644 -t "${pkgdir}"/$GLIBC_PREFIX/share/licenses/${pkgname}/ FSFAP

  rm -f "${pkgdir}"/$GLIBC_PREFIX/share/info/dir

  replace_hard_with_symbolic "$pkgdir"
}
